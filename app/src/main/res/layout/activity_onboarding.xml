<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gofun">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="監督"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textColor="@color/hai"
            android:letterSpacing="0.3"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kantoku"
            style="@style/Kantoku.Heading.Large" />

    </LinearLayout>

    <!-- Page content area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Page 1: Bluetooth Setup -->
        <LinearLayout
            android:id="@+id/page1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/gofun_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step 1: Connect as Bluetooth Keyboard"
                        style="@style/Kantoku.Heading.Small"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On your computer:"
                        android:textColor="@color/sumi"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Open Bluetooth settings\n2. Look for 'Kantoku' in available devices\n3. Pair and connect to it"
                        style="@style/Kantoku.Body"
                        android:lineSpacingMultiplier="1.5"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your computer will see this phone as a wireless keyboard and mouse. Kantoku uses this to control your computer."
                        style="@style/Kantoku.Body.Secondary"
                        android:lineSpacingMultiplier="1.4" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Page 2: Phone Position -->
        <LinearLayout
            android:id="@+id/page2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/gofun_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step 2: Position Your Phone"
                        style="@style/Kantoku.Heading.Small"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For best results:"
                        android:textColor="@color/sumi"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Place your phone on a stand or tripod\n• Point the camera at your computer screen\n• Make sure the full screen is visible\n• Avoid glare and reflections"
                        style="@style/Kantoku.Body"
                        android:lineSpacingMultiplier="1.5"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kantoku uses the camera to see what's on screen, then sends keyboard and mouse commands via Bluetooth to complete your task."
                        style="@style/Kantoku.Body.Secondary"
                        android:lineSpacingMultiplier="1.4" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </FrameLayout>

    <!-- Bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvPageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 2"
            android:textSize="14sp"
            android:textColor="@color/hai"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Next"
            android:textSize="16sp"
            android:backgroundTint="@color/indigo"
            android:textColor="@color/shironeri"
            app:cornerRadius="4dp" />

    </LinearLayout>

</LinearLayout>
