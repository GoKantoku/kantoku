<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/gofun"
    android:keepScreenOn="true">

    <!-- Vertical Japanese accent - 監督 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="監\n督"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:textColor="@color/hai"
        android:letterSpacing="0.5"
        android:gravity="center"
        android:lineSpacingMultiplier="0.8"
        android:layout_marginBottom="24dp" />

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kantoku"
        style="@style/Kantoku.Heading.Large"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vision-powered computer control"
        style="@style/Kantoku.Body.Secondary"
        android:layout_marginBottom="48dp" />

    <!-- Setup Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/gofun_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anthropic Credentials"
                style="@style/Kantoku.Heading.Small"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your API key or setup token"
                style="@style/Kantoku.Body.Secondary"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="API Key or Setup Token"
                app:endIconMode="password_toggle"
                app:boxStrokeColor="@color/indigo"
                app:hintTextColor="@color/hai"
                app:boxCornerRadiusTopStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusBottomEnd="4dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:fontFamily="monospace"
                    android:textColor="@color/sumi" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Helper buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btnGetToken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get Setup Token"
                        android:textSize="13sp"
                        android:textColor="@color/hai"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uses Max/Pro subscription"
                        android:textSize="10sp"
                        android:textColor="@color/hai"
                        android:alpha="0.6" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hai"
                    android:alpha="0.3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btnGetApiKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get API Key"
                        android:textSize="13sp"
                        android:textColor="@color/indigo"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/btn_outlined_indigo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended"
                        android:textSize="10sp"
                        android:textColor="@color/indigo"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue"
        android:textSize="16sp"
        android:backgroundTint="@color/indigo"
        android:textColor="@color/shironeri"
        app:cornerRadius="4dp" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/status_error"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>
