<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gofun">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/sumi" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:textColor="@color/sumi"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hai"
        android:alpha="0.2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- API Key Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/gofun_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anthropic Credentials"
                        style="@style/Kantoku.Heading.Small"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter your API key or setup token for Claude vision"
                        style="@style/Kantoku.Body.Secondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvCurrentKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current: sk-ant-...****"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:textColor="@color/hai"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilApiKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="API Key or Setup Token"
                        app:endIconMode="password_toggle"
                        app:boxStrokeColor="@color/indigo"
                        app:hintTextColor="@color/hai"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etApiKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:fontFamily="monospace"
                            android:textColor="@color/sumi" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/status_error"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                    <!-- Helper buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/btnGetToken"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Get Setup Token"
                            android:textSize="13sp"
                            android:textColor="@color/indigo"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackground" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/hai"
                            android:alpha="0.3" />

                        <TextView
                            android:id="@+id/btnGetApiKey"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Get API Key"
                            android:textSize="13sp"
                            android:textColor="@color/indigo"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackground" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setup token uses your Claude Max/Pro subscription"
                        android:textSize="11sp"
                        android:textColor="@color/hai"
                        android:layout_marginTop="8dp"
                        android:alpha="0.7" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Idle Mode Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/gofun_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After Task is Complete"
                        style="@style/Kantoku.Heading.Small"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What should Kantoku do to keep the computer busy?"
                        style="@style/Kantoku.Body.Secondary"
                        android:layout_marginBottom="12dp" />

                    <Spinner
                        android:id="@+id/spIdleMode"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp"
                        android:popupBackground="@color/gofun" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- About Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/gofun_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        style="@style/Kantoku.Heading.Small"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kantoku (監督)"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textColor="@color/sumi"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vision-powered computer control via Bluetooth HID. Point your phone at a screen, describe a task, and let AI take the wheel."
                        style="@style/Kantoku.Body.Secondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Made with OpenClaw"
                        android:textSize="12sp"
                        android:textColor="@color/hai"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@color/gofun">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save"
            android:textSize="16sp"
            android:backgroundTint="@color/indigo"
            android:textColor="@color/shironeri"
            app:cornerRadius="4dp" />

    </LinearLayout>

</LinearLayout>
